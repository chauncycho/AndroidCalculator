<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".volumeActivity">

    <EditText
        android:id="@+id/length_editText_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="0"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/length_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:entries="@array/length"
        app:layout_constraintBaseline_toBaselineOf="@id/length_editText_1"
        app:layout_constraintLeft_toLeftOf="@id/length_editText_1" />

    <EditText
        android:id="@+id/length_editText_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:editable="false"
        android:gravity="end"
        android:hint="0"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length_editText_1" />

    <Spinner
        android:id="@+id/length_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:entries="@array/length"
        app:layout_constraintBaseline_toBaselineOf="@id/length_editText_2"
        app:layout_constraintLeft_toLeftOf="@id/length_editText_2" />

    <Button
        android:id="@+id/length_button_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length_editText_2" />

    <Button
        android:id="@+id/length_button_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@id/length_button_7"
        app:layout_constraintTop_toBottomOf="@+id/length_editText_2" />

    <Button
        android:id="@+id/length_button_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@id/length_button_8"
        app:layout_constraintTop_toBottomOf="@+id/length_editText_2" />

    <Button
        android:id="@+id/length_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length_button_7" />

    <Button
        android:id="@+id/length_button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/length_button_4"
        app:layout_constraintTop_toBottomOf="@+id/length_button_8" />

    <Button
        android:id="@+id/length_button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@id/length_button_5"
        app:layout_constraintTop_toBottomOf="@+id/length_button_9" />

    <Button
        android:id="@+id/length_button_clear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="onClick"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="@id/length_button_6"
        app:layout_constraintLeft_toRightOf="@id/length_button_9"
        app:layout_constraintTop_toBottomOf="@+id/length_editText_2" />

    <Button
        android:id="@+id/length_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length_button_4" />

    <Button
        android:id="@+id/length_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/length_button_1"
        app:layout_constraintTop_toBottomOf="@+id/length_button_5" />

    <Button
        android:id="@+id/length_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/length_button_2"
        app:layout_constraintTop_toBottomOf="@+id/length_button_6" />

    <Button
        android:id="@+id/length_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="del"
        app:layout_constraintLeft_toRightOf="@id/length_button_3"
        app:layout_constraintTop_toBottomOf="@+id/length_button_clear" />

    <Button
        android:id="@+id/length_button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="="
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/length_button_2"
        app:layout_constraintTop_toBottomOf="@+id/length_button_1" />

    <Button
        android:id="@+id/length_button_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/length_button_ok"
        app:layout_constraintTop_toBottomOf="@+id/length_button_3" />

    <Button
        android:id="@+id/length_button_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="."
        app:layout_constraintLeft_toRightOf="@+id/length_button_0"
        app:layout_constraintTop_toBottomOf="@+id/length_button_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>
