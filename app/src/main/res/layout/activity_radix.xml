<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadixActivity">

    <EditText
        android:id="@+id/radix_editText_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:editable="false"
        android:hint="0"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/radix_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:entries="@array/radix"
        app:layout_constraintBaseline_toBaselineOf="@id/radix_editText_1"
        app:layout_constraintLeft_toLeftOf="@id/radix_editText_1" />

    <EditText
        android:id="@+id/radix_editText_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:editable="false"
        android:gravity="end"
        android:hint="0"
        android:textAlignment="textEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radix_editText_1" />

    <Spinner
        android:id="@+id/radix_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:entries="@array/radix"
        app:layout_constraintBaseline_toBaselineOf="@id/radix_editText_2"
        app:layout_constraintLeft_toLeftOf="@id/radix_editText_2" />

    <Button
        android:id="@+id/radix_button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="C"
        app:layout_constraintLeft_toLeftOf="@id/radix_editText_2"
        app:layout_constraintTop_toBottomOf="@+id/radix_editText_2" />

    <Button
        android:id="@+id/radix_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="del"
        app:layout_constraintLeft_toRightOf="@id/radix_button_clear"
        app:layout_constraintTop_toBottomOf="@+id/radix_editText_2" />

    <Button
        android:id="@+id/radix_button_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="f"
        app:layout_constraintLeft_toRightOf="@id/radix_button_delete"
        app:layout_constraintTop_toBottomOf="@+id/radix_editText_2" />

    <Button
        android:id="@+id/radix_button_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="e"
        app:layout_constraintLeft_toRightOf="@id/radix_button_f"
        app:layout_constraintTop_toBottomOf="@+id/radix_editText_2" />

    <Button
        android:id="@+id/radix_button_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_clear" />

    <Button
        android:id="@+id/radix_button_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@id/radix_button_7"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_delete" />

    <Button
        android:id="@+id/radix_button_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@id/radix_button_8"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_f" />

    <Button
        android:id="@+id/radix_button_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="d"
        app:layout_constraintLeft_toRightOf="@id/radix_button_9"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_e" />

    <Button
        android:id="@+id/radix_button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_7" />

    <Button
        android:id="@+id/radix_button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@id/radix_button_4"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_8" />

    <Button
        android:id="@+id/radix_button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@id/radix_button_5"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_9" />

    <Button
        android:id="@+id/radix_button_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="c"
        app:layout_constraintLeft_toRightOf="@id/radix_button_6"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_d" />

    <Button
        android:id="@+id/radix_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_4" />

    <Button
        android:id="@+id/radix_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/radix_button_1"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_5" />

    <Button
        android:id="@+id/radix_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/radix_button_2"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_6" />

    <Button
        android:id="@+id/radix_button_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="b"
        app:layout_constraintLeft_toRightOf="@id/radix_button_3"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_c" />

    <Button
        android:id="@+id/radix_button_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="="
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/radix_button_2"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_1" />

    <Button
        android:id="@+id/radix_button_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/radix_button_ok"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_3" />

    <Button
        android:id="@+id/radix_button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="a"
        app:layout_constraintLeft_toRightOf="@id/radix_button_0"
        app:layout_constraintTop_toBottomOf="@+id/radix_button_b" />
</androidx.constraintlayout.widget.ConstraintLayout>